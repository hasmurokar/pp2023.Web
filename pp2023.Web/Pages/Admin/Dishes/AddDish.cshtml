@page
@model pp2023.Web.Pages.Admin.Dishes.AddDishModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
	<div class="container">
		<h1>Добавить блюдо</h1>
	</div>
</div>

<div>
	<div class="container">
		<form method="post">
			 <div class="mb-3">
	<label for="name" class="form-label">Название</label>
	<input type="text" class="form-control" id="name" asp-for="AddDishRequest.Name">
			 </div>

			 <div class="mb-3">
	<label for="imageUrl" class="form-label">Ссылка на фото блюда</label>
	<input type="text" class="form-control" id="imageUrl" asp-for="AddDishRequest.ImageUrl">
			 </div>

			 <div class="mb-3">
	<label for="price" class="form-label">Цена</label>
	<input type="text" class="form-control" id="price" asp-for="AddDishRequest.Price">
			 </div>

			 <div class="mb-3">
	<label for="contents" class="form-label">Состав</label>
	<textarea class="form-control" id="contents" asp-for="AddDishRequest.Contents"></textarea>
			 </div>

			 <div class="mb-3">
	<label for="description" class="form-label">Описание</label>
	<input type="text" class="form-control" id="description" asp-for="AddDishRequest.Description">
			 </div>

			 <div class="mb-3">
	<label for="weight" class="form-label">Масса</label>
	<input type="text" class="form-control" id="weight" asp-for="AddDishRequest.Weight">
			 </div>

			 <div class="mb-3">
				<select class="form-select" aria-label="Default select example">
				<option selected>Open this select menu</option>
				<option value="1">One</option>
				<option value="2">Two</option>
				<option value="3">Three</option>
				</select>
			 </div>

			<div class="mb-3">
			<button class="btn btn-primary" type="submit">Добавить</button>
			 </div>

		</form>
	</div>
</div>

